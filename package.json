{
  "name": "react-redux-boilerplates",
  "version": "1.0.0",
  "private": true,
  "description": "FinBook React Redux Boilerplates",
  "author": "FinBook Pte Ltd",
  "scripts": {
    "clean": "rimraf dist",
    "test": "jest",
    "tslint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts{,x} --fix",
    "start": "webpack-dev-server --config webpack.config.dev.js",
    "prebuild": "rimraf dist",
    "analyze": "webpack-bundle-analyzer dist/stats.json",
    "build": "webpack --config webpack.config.prod.js --json > webpack.json",
    "deploy:no:build": "firebase deploy --only hosting",
    "deploy:no:use": "npm run build && npm run deploy:no:build",
    "useDev": "firebase use dev",
    "useLive": "firebase use live",
    "deploy": "npm run useDev && npm run deploy:no:use",
    "deployLive": "npm run useLive && npm run deploy:no:use"
  },
  "jest": {
    "globals": {
      "__DEV__": false
    },
    "setupFiles": [
      "<rootDir>/test-setup.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|svg|png|jpg)$": "identity-obj-proxy"
    },
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "modulePaths": [
      "src"
    ]
  },
  "devDependencies": {
    "@types/d3": "^5.0.0",
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^23.3.5",
    "@types/lodash": "^4.14.117",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/redux-logger": "^3.0.6",
    "@types/redux-mock-store": "1.0.0",
    "browserslist": "^4.2.1",
    "css-loader": "^1.0.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "enzyme-to-json": "^3.3.4",
    "file-loader": "^2.0.0",
    "firebase-tools": "^5.1.1",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "mini-css-extract-plugin": "^0.4.4",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "pre-commit": "^1.2.2",
    "react-test-renderer": "^16.5.2",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.2",
    "style-loader": "^0.23.1",
    "terser-webpack-plugin": "^1.1.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.2",
    "tslint": "^5.11.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "url-loader": "^1.1.2",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^3.0.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.9"
  },
  "dependencies": {
    "0x.js": "^2.0.6",
    "@0x/contract-addresses": "^2.0.0",
    "@0x/types": "^1.3.0",
    "@0x/web3-wrapper": "^3.1.6",
    "@babel/polyfill": "^7.0.0",
    "antd": "^3.10.1",
    "d3": "^5.7.0",
    "firebase": "^5.5.4",
    "isomorphic-ws": "^4.0.1",
    "lodash": "^4.17.11",
    "moment": "^2.22.2",
    "react": "^16.5.2",
    "react-animations": "^1.0.0",
    "react-dom": "^16.5.2",
    "react-redux": "^5.0.7",
    "react-reveal": "^1.2.2",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "^3.4.10",
    "typescript": "^3.1.3",
    "web3-eth": "^1.0.0-beta.36",
    "web3-eth-accounts": "^1.0.0-beta.36",
    "web3-eth-personal": "^1.0.0-beta.36",
    "whatwg-fetch": "^3.0.0"
  }
}
